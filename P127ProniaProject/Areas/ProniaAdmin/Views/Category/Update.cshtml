@model Category
@{
    ViewData["Title"] = "Update";
}




<div class="main-panel">
    <h1>
        Create Category
    </h1>
    <form class="mt-3" method="post">
    <div>
        <label>
            Category Name
        </label> <br />
        <input style="border : 3px solid" type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name">

        </span>
    </div>
    <div class="mt-2">
        <button class="btn btn-success" type="submit">
            Create
        </button>
    </div>

</form>
</div>